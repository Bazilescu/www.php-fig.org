---
layout: page
title: Blog
generator: pagination
pagination:
  max_per_page: 1
use:
- posts
- authors
---
<div class="columns">
    <div class="columns__column columns__column--8">
        {% for post in page.pagination.items %}
            {% include 'post-preview.twig' %}
        {% endfor %}

        {% if page.pagination.previous_page or page.pagination.next_page %}

            <ul class="pagination__link">
                {% if page.pagination.previous_page %}
                    <li><a class="pagination__link__new" href="{{ page.pagination.previous_page.url }}">Newer Posts</a></li>
                {% endif %}

                {% if page.pagination.next_page %}
                    <li><a class="pagination__link__old" href="{{ page.pagination.next_page.url }}">Older Posts</a></li>
                {% endif %}
            </ul>

        {% endif %}
    </div>

    <div class="columns__column columns__column--4 columns__column--padding_left">
        <nav class="sidebar">
            <h2 class="sidebar__title">Recent posts:</h2>
            <ul class="sidebar__list">
                {% for recent in data.posts %}
                    <li class="sidebar__item">
                        <a class="sidebar__link {% if recent.permalink.relativeUrlPath == '' %}sidebar__link--active{% endif %}"
                           href="{{ recent.permalink.relativeUrlPath }}">{{ recent.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>
